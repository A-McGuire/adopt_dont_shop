<%= form_with url: "/applications/new", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br>

  <%= form.label :street_address %>
  <%= form.text_field :street_address %><br>

  <%= form.label :city %>
  <%= form.text_field :city %><br>

  <%= form.label :state %>
  <%= form.text_field :state %><br>

  <%= form.label "Zip Code" %>
  <%= form.number_field :zip_code, in: 100000..999999 %><br>

  <%= form.label :description %>
  <%= form.text_field :description %><br>
  
  <%= form.submit 'Submit' %>
<% end %>