
<section> 
  Name: <%= @application.name%><br>
  Address: <%= @application.street_address%>
  <%= @application.city%>
  <%= @application.state%>
  <%= @application.zip_code%><br>
  Description: <%= @application.description%><br>
  <% @application.pets.each do |pet|%>
    Pet: <%= link_to "#{pet.name}", "/applications/#{@application.id}/pets/#{pet.id}" %>
  <% end %><br>
  Application Status: <%= @application.status%><br>
</section>

<section>
  <% if @application.status == "In Progress" %>
    <h3>Add a Pet to this Application</h3>

    <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
      <%= f.label :search %>
      <%= f.text_field :search %>
      <%= f.submit "Search" %>
    <% end %>

    <% if params[:search] != nil %>
      <% @pets.each do |pet|%>
        <h3><%= pet.name %></h3>
        <%= button_to "Adopt this Pet", "/applications/#{@application.id}", params: {adopt: pet}, method: :get%>
        <p>Age: <%= pet.age %></p>
        <p>Breed: <%= pet.breed %></p>
        <p>Adoptable: </p>
        <p>You can find <%= pet.name %> at <%= pet.shelter_name %>!</p>
      <% end %>
    <% end %>
    
    <% if params[:adopt] != nil %>
      <% @pets_to_adopt.each do |pet| %>
        <% pet.name %>
      <% end %>

      <%= button_to "Submit Application", "/applications/#{@application.id}", params: {status: "Pending"}, method: :patch%>
    <% end %>
  <% end %>
</section>
